# Production Environment Configuration
# Copy this file to .env.production and update values

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/yousef_recharge_prod?schema=public"

# Redis Configuration
REDIS_URL="redis://localhost:6379"

# Authentication
JWT_SECRET="your-super-secure-jwt-secret-key-for-production"

# SMS Service (Twilio)
TWILIO_ACCOUNT_SID="ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_PHONE_NUMBER="+1234567890"

# Push Notifications (VAPID Keys)
VAPID_PUBLIC_KEY="your-vapid-public-key"
VAPID_PRIVATE_KEY="your-vapid-private-key"
VAPID_EMAIL="notifications@yousefrecharge.com"

# Email Service (SMTP)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="noreply@yousefrecharge.com"
SMTP_PASS="your-app-password"

# File Storage (AWS S3)
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="yousef-recharge-prod"

# Payment Processing (Stripe)
STRIPE_PUBLISHABLE_KEY="pk_live_..."
STRIPE_SECRET_KEY="sk_live_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# Application Configuration
NODE_ENV="production"
PORT=8080
CLIENT_URL="https://yousefrecharge.com"
API_URL="https://api.yousefrecharge.com"

# Security
CORS_ORIGIN="https://yousefrecharge.com"
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# Monitoring and Logging
SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"
LOG_LEVEL="info"

# SSL Configuration
SSL_CERT_PATH="/etc/ssl/certs/yousefrecharge.crt"
SSL_KEY_PATH="/etc/ssl/private/yousefrecharge.key"

# Analytics
GOOGLE_ANALYTICS_ID="G-XXXXXXXXXX"
FACEBOOK_PIXEL_ID="1234567890"

# Feature Flags
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_ANALYTICS=true
ENABLE_CHAT_SUPPORT=false

# Performance
MAX_REQUEST_SIZE="10mb"
MAX_FILE_SIZE="5mb"
CACHE_TTL=3600

# Database Performance
DATABASE_POOL_SIZE=10
DATABASE_CONNECTION_TIMEOUT=30000

# Backup Configuration
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET="yousef-recharge-backups"
